# ==============================================
# 本番環境用設定（docker-compose.prod.yml用）
# ==============================================

# アプリケーション設定
VITE_APP_NAME=都心マンション価格チェッカー

# フロントエンド設定
VITE_API_URL=/api

# データベース設定
POSTGRES_DB=realestate
POSTGRES_USER=realestate
POSTGRES_PASSWORD=your-secure-password-here  # 必ず変更してください
DATABASE_URL=postgresql://realestate:your-secure-password-here@postgres:5432/realestate

# 管理画面認証
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password-here  # 必ず変更してください
DISABLE_ADMIN_AUTH=false  # 本番環境では必ずfalse

# メール送信設定（本番環境で必須）
# Gmailの場合の設定例
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password  # Gmailの場合はアプリパスワードを使用
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME=都心マンション価格チェッカー
MAIL_STARTTLS=True
MAIL_SSL_TLS=False

# お問い合わせメール送信先
CONTACT_EMAIL=info@yourdomain.com

# JWT認証用の秘密鍵（本番環境では必ず強力なランダム文字列に変更すること）
# 生成方法: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-here

# フロントエンドURL（メール内のリンク用）
FRONTEND_URL=https://yourdomain.com

# Google OAuth設定
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/oauth/google/callback

# Cookie設定（本番環境で必須）
COOKIE_SECURE=true  # 本番環境では必ずtrue（HTTPS必須）
COOKIE_SAMESITE=lax  # 本番環境ではlax推奨
COOKIE_DOMAIN=.yourdomain.com  # ドメイン名の前にドットを付ける（例：.mansion-checker.com）

# SendGridを使用する場合の設定例
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_FROM=noreply@yourdomain.com
# MAIL_FROM_NAME=都心マンション価格チェッカー
# MAIL_STARTTLS=True
# MAIL_SSL_TLS=False

# AWS SESを使用する場合の設定例
# MAIL_USERNAME=your-ses-smtp-username
# MAIL_PASSWORD=your-ses-smtp-password
# MAIL_SERVER=email-smtp.ap-northeast-1.amazonaws.com
# MAIL_PORT=587
# MAIL_FROM=noreply@yourdomain.com
# MAIL_FROM_NAME=都心マンション価格チェッカー
# MAIL_STARTTLS=True
# MAIL_SSL_TLS=False

# スクレイパー設定
SCRAPER_DETAIL_REFETCH_DAYS=90  # 詳細ページ再取得間隔（日）。0に設定すると常に再取得
REACTIVATION_THRESHOLD_DAYS=60  # 販売終了物件の再活性化期間（日）。この期間を超えると新規データとして登録

# 不動産情報ライブラリAPI設定
REINFOLIB_API_KEY=your-api-key-here

# フロントエンド設定
# 開発環境: http://localhost:8000/api
# 本番環境: /api (docker-compose.prod.ymlで設定)
VITE_API_URL=http://localhost:8000/api
