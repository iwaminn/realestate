FROM node:18-alpine as builder

WORKDIR /app

# 依存関係のインストール
COPY frontend/package*.json ./
RUN npm ci

# アプリケーションのビルド
COPY frontend ./
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL
# 型チェックをスキップしてビルド（本番環境では警告のみ）
RUN npx vite build

# 本番用イメージ
FROM node:18-alpine

WORKDIR /app

# serve パッケージのインストール
RUN npm install -g serve

# ビルド済みファイルのコピー
COPY --from=builder /app/dist ./dist

EXPOSE 3000

CMD ["serve", "-s", "dist", "-l", "3000"]
